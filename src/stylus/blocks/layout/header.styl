.header
  width 100%
  margin 0

  &-content
    height 61px
    padding 30px 0 60px
    position relative

  &__logo
    display block
    size(248px, 61px)
    text-decoration none
    float left

  &__info
    float right
    width 600px

    &-content
      display table

      &_item
        display table-cell
        width 200px
        box-sizing()
        padding 7px 0 7px 20px
        text-align right
        line-height 23px
        color #555555

        &__title
          font-size 14px
          font-weight 400

        &__content
          font-size 15px
          font-weight 700

  &__menu
    absolute bottom -35px left -50px
    size(1100px, 70px)
    background $orange
    box-sizing border-box
    padding 0 50px
    z-index 1

    &-item
      float left

    &__link
      color white
      display block
      padding 15px
      font-size 14px
      line-height 41px
      box-sizing border-box
      height 70px
      text-transform uppercase
      text-decoration none
      font-family "Prosto One", Helvetica, Arial, sans-serif
      transition all 300ms ease-in 40ms

      &:hover
        background $blue
        color white

@media screen and (max-width: 1100px)
  .header__menu
    left 0
    width 1000px
    padding 0 12px
    height 60px

      &__link
        line-height 31px
        height 60px
        font-size 15px