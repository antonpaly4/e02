.project-details
  margin-top 70px

  &__top
    overflow hidden

  &__summary
    float left
    background desaturate(lightness($blue, 70%), 50%)
    width 480px
    box-sizing border-box
    padding 20px

    &-title
      margin-bottom 20px
      color $blue
      font-size 20px

    &-item
      margin-bottom 15px
      color #3d3d3d

  &__photos
    float right
    width 480px

    &__photo
      transition all 300ms ease 20ms
      background no-repeat center / 100% auto
      margin 10px

      &:hover
        transform rotate(0deg)
        margin-top 0
        cursor pointer

      &-main
        size(480px, 300px)
        margin 0 0 10px

      &-small
        size(144px)
        transform rotate(-5deg)
        display inline-block
        font-size 0

        &:last-child
          margin-right 0

        &:first-child
          margin-left 0

  &__description
    margin 20px 0 50px
    font-size 16px

    &-title
      color $blue
      margin-bottom 20px
      font-size 20px